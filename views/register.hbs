<main>
    <h1>Registreerimine</h1>
    
    {{#if error}}
    <div class="alert">{{error}}</div>
    {{/if}}
    
    {{#if success}}
    <div style="background-color: #4CAF50; color: #fff; margin: 24px 0; padding: 24px;">
        {{success}}
    </div>
    {{/if}}

    <form action="/user/register" method="POST">
        <label for="username">Kasutajanimi *</label>
        <input type="text" id="username" name="username" required minlength="3">

        <label for="email">Email *</label>
        <input type="email" id="email" name="email" required>

        <label for="password">Parool *</label>
        <input type="password" id="password" name="password" required minlength="8">
        <p style="font-size: 90%; color: #666; margin-top: -18px;">
            Parool peab olema vähemalt 16 tähemärki pikk ja sisaldama suurtähti, väiketähte ja numbrit.
        </p>

        <label for="confirmPassword">Kinnita parool *</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required>

        <button type="submit">Registreeru</button>
        <p style="margin-top: 12px;">Oled juba kasutaja? <a href="/user/login">Logi sisse</a></p>
    </form>
</main>