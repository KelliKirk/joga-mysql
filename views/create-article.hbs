<main>
    <h1>Loo uus artikkel</h1>
    
    {{#if error}}
    <div class="alert">{{error}}</div>
    {{/if}}

    <form action="/article/create" method="POST">
        <label for="name">Artikli pealkiri *</label>
        <input type="text" id="name" name="name" required>

        <label for="slug">URL-i lühinimi (slug) *</label>
        <input type="text" id="slug" name="slug" required>
        <p style="font-size: 90%; color: #666; margin-top: -18px;">
            Näiteks: "minu-esimene-artikkel" (ainult väiketähed, numbrid ja sidekriipsud)
        </p>

        <label for="image">Pildi nimi</label>
        <input type="text" id="image" name="image" placeholder="artikkel.jpg">
        <p style="font-size: 90%; color: #666; margin-top: -18px;">
            Pildi failinimi kaustast /public/images/
        </p>

        <label for="body">Artikli sisu *</label>
        <textarea id="body" name="body" required></textarea>

        <input type="hidden" name="author_id" value="{{user.user_id}}">

        <button type="submit" title="Loo artikkel" aria-label="Loo artikkel">
    <i class="fas fa-save"></i>
</button>
<a href="/">
    <button type="button" title="Tühista" aria-label="Tühista">
        <i class="fas fa-times"></i>
    </button>
</a>
    </form>
</main>