<main>
    <h1>Muuda artiklit</h1>
    
    {{#if error}}
    <div class="alert">{{error}}</div>
    {{/if}}

    <form action="/article/edit/{{article.id}}" method="POST">
        <label for="name">Artikli pealkiri *</label>
        <input type="text" id="name" name="name" value="{{article.name}}" required>

        <label for="slug">URL-i lühinimi (slug) *</label>
        <input type="text" id="slug" name="slug" value="{{article.slug}}" required>

        <label for="image">Pildi nimi</label>
        <input type="text" id="image" name="image" value="{{article.image}}">

        <label for="body">Artikli sisu *</label>
        <textarea id="body" name="body" required>{{article.body}}</textarea>

        <input type="hidden" name="author_id" value="{{article.author_id}}">

        <div style="display: flex; gap: 12px; margin-top: 24px;">
    <button type="submit" title="Salvesta muudatused" aria-label="Salvesta muudatused">
        <i class="fas fa-save"></i>
    </button>
    <a href="/article/{{article.slug}}">
        <button type="button" title="Tühista" aria-label="Tühista">
            <i class="fas fa-times"></i>
        </button>
    </a>
</div>
    </form>
</main>